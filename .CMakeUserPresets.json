{
    "version": 6,
    "configurePresets": [
      {
        "name": "my-debug",
        "displayName": "My Debug",
        "inherits": "x64-debug",
        "toolchainFile": "[VCPKG ROOT]/scripts/buildsystems/vcpkg.cmake",
        "cacheVariables": {
          "CMAKE_CXX_COMPILER" : "[PATH TO CL ON YOUR MACHINE]/cl.exe",
          "CMAKE_C_COMPILER" : "[PATH TO CL ON YOUR MACHINE]cl.exe"
        }
      },
      {
        "name": "my-release",
        "displayName": "My Release",
        "inherits": "x64-release",
        "toolchainFile": "[VCPKG ROOT]/scripts/buildsystems/vcpkg.cmake",
        "cacheVariables": {
          "CMAKE_CXX_COMPILER" : "[PATH TO CL ON YOUR MACHINE]cl.exe",
          "CMAKE_C_COMPILER" : "[PATH TO CL ON YOUR MACHINE]cl.exe"
        }
      }
    ]
  }