{
    "version": 6,
    "configurePresets": [
      {
        "name": "base",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "installDir": "${sourceDir}/install/${presetName}",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "cl",
          "CMAKE_CXX_COMPILER": "cl",
          "CMAKE_CXX_STANDARD": "23",
          "CXX_SCAN_FOR_MODULES": true,
          "USE_ADDR_SANITIZER": false,
          "WITH_SAMPLE": false,
          "WITH_TESTS": false
        },
        "environment": {
          "PROGRAM_VERSION": "0.1.0",
          "PROGRAM_DESCRIPTION": "A prototyping tool for level design, map generation, and pathfinding algorithms.",
          "PROGRAM_URL": "https://github.com/m00se-3/ProtoMapper",
          "ROOT_FOLDER": "${sourceDir}"
          
        }
      },
      {
        "name": "x64-debug",
        "displayName": "x64 Debug",
        "inherits": "base",
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "GWK_TARGET_ARCH": "x64"
        }
      },
      {
        "name": "x64-release",
        "displayName": "x64 Release",
        "inherits": "x64-debug",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "GWK_TARGET_ARCH": "x64"
        }
      }
    ]
}
